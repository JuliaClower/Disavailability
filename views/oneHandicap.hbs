<h1>{{name}}</h1>

<div class="content">
    <p class="nolist">Category: {{category}}</p>
    <p class="nolist">Name: {{name}}</p>
    <p class="nolist">Parking Accessible: {{parkingAccessible}}</p>
    <p class="nolist">Bathroom Accessible: {{bathroomAccessible}}</p>
    <p class="nolist">Description: {{description}}</p> <br>
</div>

{{#if picture}}
<img class="onePicture" src="{{picture}}" />
{{/if}}
<br>
<div class="button-bar">
    <a href="/handicap/edit/{{_id}}">
        <button class="allButton">
            Edit Content
        </button>
    </a>
    <form action="/handicap/{{_id}}?_method=DELETE" method="POST">
        <input class="allButton" type="submit" value="Delete Content" />
    </form>

    <a href="/handicap">
        <input class="allButton" type="submit" value="Back to Main Data" />
    </a>
</div>