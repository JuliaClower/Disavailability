<a href="/category/edit/{{_id}}">
    <button class="createButton">
        Edit Category
    </button>
</a>

<form action="/category/{{_id}}?_method=DELETE" method="POST">
    <input class="createButton" type="submit" value="Delete Category" />
</form>
{{#each categories.subCat}}
    <a href="/category/{{_id}}/subCat">
        <p class="category">{{category}}</p>
        <p class="description">{{description}}</p>
        <p class="picture">{{picture}}</p>
    </a>
{{/each}}

<h1>Create New SubCat</h1>

<form action="/category/{{_id}}" method="POST"/>
    <input type="text" name="category" placeholder="category" />
    <input type="text" name="description" placeholder="description" />
    <input type="text" name="picture" placeholder="picture" />

    <input type="submit"    value="Create"/>
</form>